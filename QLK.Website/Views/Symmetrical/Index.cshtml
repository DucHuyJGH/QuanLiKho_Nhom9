<div class="modal fade" id="Detailsinputreporet">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title text-center">Danh sách chi tiết phiếu nhập</h3>
            </div>
            <div class="modal-body" id="myModalBodyDiv15">
            </div>

        </div>
    </div>
</div>

<div class="modal fade" id="DetailsOutputreporet">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title text-center">Danh sách chi tiết phiếu xuất</h3>
            </div>
            <div class="modal-body" id="myModalBodyDiv16">
            </div>

        </div>
    </div>
</div>
@if (ViewBag.kt == false || ViewBag.kt1 == false)
{
    <button class="open-button" onclick="openForm()">Thông báo</button>

    <div class="chat-popup" id="myForm">
        <form class="form-container">
            <h2 class="text-center" >Thông báo</h2>
            @if (ViewBag.kt == false)
            {
                <div>
                    <p style="color:red" class="text-center"> Chú ý:  Sai số!</p>
                </div>
            }
            @if (ViewBag.kt1 == false)
            {
                <div>
                    <p style="color:red" class="text-center"> Chú ý: Có mặt hằng sắp hết!</p>
                </div>
            }
          
            <button type="button" class="btn btn-danger" onclick="closeForm()">Đóng</button>
        </form>
    </div>
}



<div class="text-center">
    Trang @(Model.PageCount < Model.PageNumber ? 0: Model.PageNumber) of @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, currentFilter = ViewBag.CurrentFilter }))
</div>


<script>


    function detailinputSym(id) {
        var url = "/Symmetrical/Details1/" + id;
        $("#myModalBodyDiv15").load(url, function () {
            $("#Detailsinputreporet").modal("show");

        })

    }
    function detailoutputSym(id) {
        var url = "/Symmetrical/Details2/" + id;
        $("#myModalBodyDiv16").load(url, function () {
            $("#DetailsOutputreporet").modal("show");

        })

    }
    function openForm() {
        document.getElementById("myForm").style.display = "block";
    }

    function closeForm() {
        document.getElementById("myForm").style.display = "none";
    }
</script>